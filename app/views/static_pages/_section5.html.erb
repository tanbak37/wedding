<!-- Yang diundang -->
<section class="section-6">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-12 text-center py-5">
        <h2 class="font-weight-light getinvitation-title" data-aos="fade-down" data-aos-duration="1500">Sehubungan dengan adanya pandemik Covid-19, maka acara ini hanya dihadiri oleh keluarga.</h2>
        <p data-aos="fade-down" data-aos-duration="1500" class="getinvitation-subtitle">Mohon maaf dan mohon doa nya agar semua berjalan lancar. Terima kasih...</p>
        <div data-aos="fade-down", data-aos-duration="1500">
          <%= form_tag(root_path, method: :get) do%>
            <%= text_field_tag(:id, params[:id], style: "border: 1px solid #996515;") %>
            <%= submit_tag "RSVP", class: "btn btn-info btn-sm mb-1" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>